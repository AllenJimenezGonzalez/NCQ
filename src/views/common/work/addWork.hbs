<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/addWork" method="POST">

                        <div class="form-group">
                            <input type="text" name="descriptionWork" class="form-control" placeholder="Descripcion del trabajo:">
                        </div>

            
                        <div class="form-row">
                            <div class="col-md-12 mb-3">
                                <label for="clientCode">Tipos de trabajo: </label>
                                <select class="custom-select" id="workTypeCode" name="workTypeCode" required>
                                    <option selected disabled value="">Selecciona...</option>
                                    {{#each workType}}
                                    <option value={{workTypeCode}}>{{descriptionWorkType}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>


                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Agregar tipo de trabajo
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>