<div class="container p-4">


    <div class="m-1">
        <a class="btn btn-outline-success btn-block" href="/addWork">Agregar trabajo</a>
    </div>

    <div class="row">
        {{#each works}}
        <div class="col-md-3">
            <div class="shadow  card text-center">
                <div class="card-body">
                    <p class="p-3 mb-2 bg-success text-white text-uppercase font-weight-light">{{workCode}}</p>
                    <p class="text-muted">{{descriptionWork}}</p>
                     <p class="text-muted">{{workTypeCode}}</p>
                    <a class="btn btn-success" href="#">
                        Editar
                    </a>

                    <a class="btn btn-danger" href="/deleteClient/{{clientCode}}">
                        Eliminar
                    </a>

                    <div class="p-1 m-1"></div>
                    <div class="m-1"></div>

                    <div class="dropdown">
                        <button class="p-3 mb-2 font-weight-light btn btn-link dropdown-toggle" type="button"
                            id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Contacto
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">

                            <a class="dropdown-item" href="/getClientsEmail/{{clientCode}}">Correo cliente</a>

                            <a class="dropdown-item" href="/getClientsPhone/{{clientCode}}">Telefono cliente</a>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        {{/each}}
    </div>
</div>