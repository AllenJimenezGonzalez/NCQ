<div class="container p-4">
    <div class="m-1">
        <a class="btn btn-outline-success btn-block" href = "addBranchOffice" >Agregar sucursal</a>
    </div>
    
    <div class="row">
        {{#each branchOffices}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <a href="{{url}}" target="_blank">
                        <h3 class="card-title text-uppercase">
                            {{name}}
                        </h3>
                    </a>
                    <p class="text-muted">{{branchCode}}</p>
                    <p class="m-2">{{direction}}</p>
                    <p class="text-muted">{{clientCode}}</p>

                    <a class="btn btn-success" href="/links/edit/{{id}}">
                        Editar
                    </a>

                    <a class="btn btn-danger" href="deleteBranchOffice/{{branchCode}}">
                        Eliminar
                    </a>

                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No hay sucursales para mostrar</p>
                <a href="/links/add">Agrega una aqui!</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>