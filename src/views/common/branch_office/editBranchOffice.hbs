<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action= "/editBranchOffice" method="POST">

                        <div class="form-group">
                            <input type="number" value = "{{data.branchCode}}" name="branchCode" class="form-control" placeholder="Codigo de la sucursal" readonly autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" value = "{{data.name}}" name="name" class="form-control" placeholder="Nombre de la sucursal">
                        </div>
                        <div class="form-group">
                            <textarea name="direction" rows="2" class="form-control" placeholder="Direccion"> {{data.direction}} </textarea>
                        </div>
                        <div class="form-group">
                            <input type="number" name="clientCode" value = "{{data.clientCode}}" rows="1" class="form-control" placeholder="Codigo del cliente"></textarea>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Editar sucursal
                            </button>
                        </div>
                    </form>
                    <a class="btn btn-danger btn-block" href="/">
                        Cancelar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>