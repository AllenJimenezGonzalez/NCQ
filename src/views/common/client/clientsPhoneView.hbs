<div class="container p-4">
    <div class="m-1">
        <a class="btn btn-outline-success btn-block" href = "/addClientPhone" >Agregar telefono</a>
    </div>
    
    <div class="row">
        {{#each phones}}
        <div class="col-md-3">
            <div class="shadow card text-center">
                <div class="card-body">
                    <p class="p-3 mb-2 bg-success text-white text-uppercase font-weight-light">{{fullName}}</p>
                    <p class="text-muted">{{phone}}</p>
                    <p class="text-muted">{{code}}</p>
                    <a class="btn btn-danger" href="/deleteClientPhone/{{phone}}/{{code}}">
                        Eliminar
                    </a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>